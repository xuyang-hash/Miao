<?xml version="1.0" encoding="utf-8"?>
<com.meowing.loud.arms.widget.controls.AnimationRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_52"
    android:background="@color/white"
    android:foreground="@drawable/foreground_r0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/normal_head_size"
        android:layout_height="@dimen/normal_head_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_function_name"
        android:maxWidth="@dimen/dp_200"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_toEndOf="@+id/iv_icon"
        android:text="功能名称"
        android:textColor="#000"
        android:textSize="@dimen/subtitle_size"
        style="@style/CommonContent" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toEndOf="@id/tv_function_name"

        android:text=""
        android:textColor="@color/theme_color"
        android:textSize="@dimen/tips_size" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_34"
        android:ellipsize="end"
        android:gravity="end|center"
        android:maxLines="1"
        android:textColor="@color/tran_white_15"
        android:textSize="@dimen/tips_size" />

    <ImageView
        android:id="@+id/iv_navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:src="@mipmap/ic_common_navigator" />

    <Switch
        android:id="@+id/sw_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_toStartOf="@+id/iv_navigator"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/bg_border_1_theme_r_30"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_5"
        android:text="去绑定"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/small_tips_size"
        android:visibility="gone" />
</com.meowing.loud.arms.widget.controls.AnimationRelativeLayout>